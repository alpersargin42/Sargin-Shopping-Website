@model List<EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<body>
<h1>Roller</h1>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/AdminRol/RoleDelete" class="btn btn-danger">Sil</a></td>
            

        </tr>
    }
    </tbody>
</table>
<a href="/AdminRol/AddRole" class="btn btn-primary">Yeni Rol Ekle</a>
</body>
</html>

