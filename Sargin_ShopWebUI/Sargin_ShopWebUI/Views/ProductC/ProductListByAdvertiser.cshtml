@using EntityLayer.Concrete
@model List<Pruduct>
@{
    ViewData["Title"] = "ProductListByAdvertiser";
    Layout = "~/Views/Shared/AdvertiserLayout.cshtml";
}

<h1>Ürünlerim</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Başlığı</th>
        <th>Kategori</th>
        <th>Durum</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ProductStatus</td>
            <td><a href="/ProductC/DeleteProduct/@item.ProductID" class="btn btn-gradient-danger">Sil</a></td>
            <td><a href="/ProductC/EditProduct/@item.ProductID" class="btn btn-gradient-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/ProductC/ProductAdd" class="btn btn-gradient-primary">Yeni Ürün Ekle</a>

