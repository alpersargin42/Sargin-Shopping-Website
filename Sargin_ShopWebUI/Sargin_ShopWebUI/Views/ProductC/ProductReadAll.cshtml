@model IEnumerable<EntityLayer.Concrete.Pruduct>

@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
    <section class="banner-bottom">
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="/ProductC/Index">
                                        <img src="@item.ProductImage" class="img-fluid" alt="">
                                    </a>
                                </div>
                            </div>

                            <h3>
                                <a href="/ProductC/Index">@item.ProductTitle </a>
                            </h3>
                            <p>@item.ProductContent</p>
                            <a href="/ProductC/Index" class="btn btn-primary read-m">Alışverişe devam et</a>
                            <a href="/ProductC/Offer/@item.ProductID" class="btn btn-primary read-m">@item.ProductPrice <i class="fas fa-lira-sign"></i>></a>
                        </div>
                    }

                    @await Component.InvokeAsync("CommentListByProduct", new { id = ViewBag.i })
                    @*await Html.PartialAsync("~/Views/Comment/CommentListByProduct.cshtml")*@
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">

                        @await Component.InvokeAsync("AdvertiserLastProduct")

                    </div>

                </aside>

            </div>
        </div>
    </section>
</body>

</html>
