@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/web/images/user_icon_150670.png" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName <h6>Ürüne Puanı=@item.ProductScore / 10</h6></h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
</div>